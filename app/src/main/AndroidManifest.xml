<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lunev2k.schedule">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RangeDateActivity"
            android:label="@string/title_activity_range_date"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lunev2k.schedule.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddLearnerActivity"
            android:label="@string/title_activity_add_learner"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lunev2k.schedule.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AddLessonActivity"
            android:label="@string/title_activity_add_lesson"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lunev2k.schedule.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ViewLessonActivity"
            android:label="@string/title_activity_view_lesson"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lunev2k.schedule.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ViewLearnerActivity"
            android:label="@string/title_activity_view_learner"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lunev2k.schedule.activities.MainActivity" />
        </activity>
    </application>

</manifest>